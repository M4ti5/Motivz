<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ui.shop.AvatarShopFragment">

    <LinearLayout
        android:id="@+id/globalLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Avatar"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_weight="2"
            android:src="@drawable/ic_avatar" />

        <LinearLayout
            android:id="@+id/customizationMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/TypesMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/buttonType1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:text="Type 1" />

                    <Button
                        android:id="@+id/buttonType2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:text="Type 2" />

                    <Button
                        android:id="@+id/buttonType3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:text="Type 3" />

                    <Button
                        android:id="@+id/buttonType4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:text="Type 4" />

                    <Button
                        android:id="@+id/buttonType5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:text="Type 5" />

                    <Button
                        android:id="@+id/buttonType6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:text="Type 6" />
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/ChoiceMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:id="@+id/buttonObject1"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:text="Objet 1" />

                    <Button
                        android:id="@+id/buttonObject2"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:text="Objet 2" />

                    <Button
                        android:id="@+id/buttonObject3"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="2dp"
                        android:text="Objet 3" />

                    <Button
                        android:id="@+id/buttonObject4"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="2dp"
                        android:text="Objet 4" />

                    <Button
                        android:id="@+id/buttonObject5"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="2dp"
                        android:text="Objet 5" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>