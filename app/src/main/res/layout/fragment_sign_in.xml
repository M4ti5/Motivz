<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.connexion.SignInFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/bienvenueSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:text="@string/bienvenue"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/pseudoSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bienvenueSI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/pseudo"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/enterPseudoSI"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/pseudoSI"
        android:layout_centerHorizontal="true"
        android:hint="superMarie5" />

    <TextView
        android:id="@+id/emailSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterPseudoSI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/email"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/enterEmailSI"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/emailSI"
        android:layout_centerHorizontal="true"

        android:hint="example@gmail.com" />

    <TextView
        android:id="@+id/passwordSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterEmailSI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/password"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/enterPasswordSI"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/passwordSI"
        android:layout_centerHorizontal="true"
        android:hint="mot de passe" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/enterPasswordSI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/medium_blue"
        android:text="@string/validate" />

</RelativeLayout>